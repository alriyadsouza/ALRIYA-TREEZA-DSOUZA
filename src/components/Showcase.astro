---
import logos from '../../images/framework-logos.png'
import Card from '../components/Card.astro'
import logosSmall from '../../images/framework-logos-small.png'
import rocket from '../images/WhatsApp Image 2023-04-22 at 17.17.22.jpg'
import img from '../images/github-fill.svg'
import img1 from '../images/discord-fill.svg'
import img2 from '../images/twitter-fill.svg'
import img3 from '../images/instagram-line.svg'
export interface Props {
  heading?: string;
  text?: string;
  showExtra?: boolean;
}

const { heading = "ALRIYA TREEZA D SOUZA", text="Computer Science Student. Web Developer", showExtra = false } = Astro.props as Props;
---

<section class="showcase">
  <div class="showcase-text">
    <img src={rocket} width="250" height="250" alt=""/>
    <br>
    <h1>{heading}</h1>
    <p>
      {text}
    </p>
  </div>
  
  <img src={img} width="60" height="60" src="https://github.com/alriyadsouza"/>
  &nbsp;
  <img src={img1} width="60" height="60" alt="https://github.com/alriyadsouza"/>
  &nbsp;
  <img src={img2} width="60" height="60" alt="https://github.com/alriyadsouza"/>
  &nbsp;
  <img src={img3} width="60" height="60" alt="https://github.com/alriyadsouza"/>
  

  {showExtra && <>
    <div class="showcase-img">
    <img class="logos" src={logos} alt="" />
    <img class="logos-small" src={logosSmall} alt="" />
  </div>

  <p class="showcase-demo">
    <small>
      <a href="https://github.com/alriyadsouza">Alriya Dsouza</a>
      </small>
  </p>
  </>}
</section>

<style>
  .showcase {
  height: auto;
  background-color: var(--color-secondary);
  background-image: linear-gradient(to bottom, var(--color-primary), rgba(43, 86, 188, 0));
  padding: 30px;
  text-align: center;
}

.showcase-blog {
  min-height: 300px;
}

.showcase-text {
  max-width: 1000px;
  color: black;
  text-align: center;
  margin: 50px auto;
}

.showcase h1 {
  font-size: 50px;
  color: rgb(114, 185, 229);
  margin-bottom: 20px;
}

.showcase p {
  font-size: 24px;
  margin-bottom: 20px;
}

.showcase-img {
  text-align: center;
}

.showcase-img img {
  border-radius: 10px;
  margin: auto;
}

.showcase-demo {
  color: rgb(114, 185, 229);
  text-align: left;
  font-weight: 300;
}
</style>